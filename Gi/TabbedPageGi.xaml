<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Gi" 
             x:Class="Gi.TabbedPageGi"
             Title="                    Inicio"
            
             BarBackground="Black"   
             BarTextColor="{StaticResource Secondary}"          
             SelectedTabColor="{StaticResource Terciary}"                         
             UnselectedTabColor="{StaticResource Secondary}">    
                                 
             <!-- Color de fondo de la barra -->
             <!-- Color del texto -->                   
             <!-- Color cuando está seleccionado -->
             <!-- Color cuando no está seleccionado -->
    
    
    <!--pestana de referencia-->
    <ContentPage Title="REFERENCIA" IconImageSource="referencia.png"
                 BackgroundColor = "Black">

        <!--distribucon vertical de la pestana de referencia-->
        <StackLayout Spacing="10">

            <!--borde para titulo de "ingresar"-->
            <Border BackgroundColor="{StaticResource Terciary}"
                    WidthRequest="145" HeightRequest="40"
                    StrokeShape="RoundRectangle 5"
                    Stroke="{StaticResource Terciary}"
                    Margin="0,20,0,0" VerticalOptions="Center">

                <!--texto para titulo de "ingresar"-->
                <Label 
                 Text="INGRESAR" FontSize="Large"
                 HorizontalOptions="Center" VerticalOptions="Center"
                 FontAttributes="Bold" TextColor="{StaticResource Secondary}"
                 BackgroundColor="{StaticResource Terciary}"/>

            </Border>

            <!--borde para titulo de "fecha"-->
            <Border BackgroundColor="{StaticResource Terciary}"
                    WidthRequest="90" HeightRequest="40"
                    StrokeShape="RoundRectangle 5"
                    Stroke="{StaticResource Terciary}"
                    Margin="10,70,0,0" VerticalOptions="Start"
                    HorizontalOptions="Start">

                <!--texto para titulo de "fecha"-->
                <Label 
                 Text="Fecha:" FontSize="Large"
                 HorizontalOptions="Center" VerticalOptions="Center"
                 FontAttributes="Bold"/>

            </Border>

            <!--espacio para ingreso por teclado de "fecha"-->
            <Entry 
             x:Name="fecha" Placeholder="Ej: 19/03/2004" FontAttributes="None"
             Margin="10,10,10,0" FontSize="Large" Keyboard="Url"/>

            <!--borde para titulo de "tipo de pago"-->
            <Border BackgroundColor="{StaticResource Terciary}"
                    WidthRequest="165" HeightRequest="40"
                    StrokeShape="RoundRectangle 5"
                    Stroke="{StaticResource Terciary}"
                    Margin="10,10,0,0" VerticalOptions="Start"
                    HorizontalOptions="Start">

                <!--texto para titulo de "tipo de pago"-->
                <Label 
                 Text="Tipo De Pago:" FontSize="Large"
                 HorizontalOptions="Center" VerticalOptions="Center"
                 FontAttributes="Bold"/>

            </Border>

            <!--espacio para seleccion de opciones de "tipo de pago"-->
            <Picker 
             x:Name="tipoDePago" Title="Elija una opción . . ." 
             FontSize="Large" Margin="10,10,10,0" 
             ItemsSource="{Binding TiposDePagos}"
             SelectedItem="{Binding TiposDePagosSelec}"/>

            <!--borde para titulo de "motivo"-->
            <Border BackgroundColor="{StaticResource Terciary}"
                    WidthRequest="100" HeightRequest="40"
                    StrokeShape="RoundRectangle 5"
                    Stroke="{StaticResource Terciary}"
                    Margin="10,10,0,0" VerticalOptions="Start"
                    HorizontalOptions="Start">

                <!--texto para titulo de "motivo"-->
                <Label 
                 Text="Motivo:" FontSize="Large"
                 HorizontalOptions="Center" VerticalOptions="Center"
                 FontAttributes="Bold"/>

            </Border>

            <!--espacio para ingreso de la descripcion en "motivo"-->
            <Editor 
             x:Name="motivo" Placeholder="¿A qué se debe este movimiento? (categoría)"
             FontSize="Large" Margin="10,10,10,0"
             Keyboard="Chat" HeightRequest="100"/>

            <!--boton para guardar y validar los datos ingresados-->
            <Button
             Text="Guardar" Clicked="setPropReferencia"
             FontSize="Large" FontAttributes="Bold"
             HorizontalOptions="Center"
             BackgroundColor="{StaticResource Terciary}"
             TextColor="{StaticResource Secondary}"
             BorderColor="{StaticResource Secondary}" BorderWidth="1"/>

            <!--informe del guardado-->
            <Label 
             x:Name="informeReferencia" Text="" 
             VerticalOptions="Center"
             HorizontalOptions="Center"/>

        </StackLayout>
        
    </ContentPage>






    <!--pestana de ingreso-->
    <ContentPage Title="INGRESO" IconImageSource="ingreso2.png">

        <!--distribucion vertical de la pestana ingreso-->
        <StackLayout Spacing="10">
            
            <!--borde para titulo de "ingresar"-->
            <Border BackgroundColor="{StaticResource Terciary}"
                    WidthRequest="145" HeightRequest="40"
                    StrokeShape="RoundRectangle 5"
                    Stroke="{StaticResource Terciary}"
                    Margin="0,20,0,0" VerticalOptions="Center">

                <!--texto para titulo de "ingresar"-->
                <Label 
                 Text="INGRESAR" FontSize="Large"
                 HorizontalOptions="Center" VerticalOptions="Center"
                 FontAttributes="Bold" TextColor="{StaticResource Secondary}"
                 BackgroundColor="{StaticResource Terciary}"/>

            </Border>

            <!--borde para titulo de "origen"-->
            <Border BackgroundColor="{StaticResource Terciary}"
                    WidthRequest="90" HeightRequest="40"
                    StrokeShape="RoundRectangle 5"
                    Stroke="{StaticResource Terciary}"
                    Margin="10,70,0,0" VerticalOptions="Start"
                    HorizontalOptions="Start">

                <!--texto para titulo de "origen"-->
                <Label 
                 Text="Origen:" FontSize="Large"
                 HorizontalOptions="Center" VerticalOptions="Center"
                 FontAttributes="Bold"/>

            </Border>

            <!--espacio para ingreso por teclado de "origen"-->
            <Entry 
             x:Name="origen" Placeholder="¿Quién envío este ingreso?" FontAttributes="None"
             Margin="10,10,10,0" FontSize="Large" Keyboard="Text"/>

            <!--borde para titulo de "Monto"-->
            <Border BackgroundColor="{StaticResource Terciary}"
                    WidthRequest="90" HeightRequest="40"
                    StrokeShape="RoundRectangle 5"
                    Stroke="{StaticResource Terciary}"
                    Margin="10,10,0,0" VerticalOptions="Start"
                    HorizontalOptions="Start">

                <!--texto para titulo de "monto"-->
                <Label 
                 Text="Monto:" FontSize="Large"
                 HorizontalOptions="Center" VerticalOptions="Center"
                 FontAttributes="Bold"/>

            </Border>

            <!--espacio para ingreso por teclado de "monto"-->
            <Entry 
             x:Name="montoIngreso" Placeholder="00,0$" FontAttributes="None"
             Margin="10,10,10,0" FontSize="Large" Keyboard="Numeric"/>

            <!--boton para guardar y validar los datos ingresados-->
            <Button
             Text="Guardar" Clicked="setPropIngreso"
             FontSize="Large" FontAttributes="Bold"
             HorizontalOptions="Center"
             BackgroundColor="{StaticResource Terciary}"
             TextColor="{StaticResource Secondary}"
             BorderColor="{StaticResource Secondary}" BorderWidth="1"/>

            <!--informe del guardado-->
            <Label 
             x:Name="informeIngreso" Text="" 
             VerticalOptions="Center"
             HorizontalOptions="Center"/>

        </StackLayout>

    </ContentPage>







    <!--pestana de egreso-->
    <ContentPage Title="EGRESO" IconImageSource="egreso.png">

        <!--distribucion vertical de la pestana egreso-->
        <StackLayout Spacing="10">

            <!--borde para titulo de "ingresar"-->
            <Border BackgroundColor="{StaticResource Terciary}"
             WidthRequest="145" HeightRequest="40"
             StrokeShape="RoundRectangle 5"
             Stroke="{StaticResource Terciary}"
             Margin="0,20,0,0" VerticalOptions="Center">

                <!--texto para titulo de "ingresar"-->
                <Label 
                 Text="INGRESAR" FontSize="Large"
                 HorizontalOptions="Center" VerticalOptions="Center"
                 FontAttributes="Bold" TextColor="{StaticResource Secondary}"
                 BackgroundColor="{StaticResource Terciary}"/>

            </Border>

            <!--borde para titulo de "destino"-->
            <Border BackgroundColor="{StaticResource Terciary}"
             WidthRequest="100" HeightRequest="40"
             StrokeShape="RoundRectangle 5"
             Stroke="{StaticResource Terciary}"
             Margin="10,70,0,0" VerticalOptions="Start"
             HorizontalOptions="Start">

                <!--texto para titulo de "destino"-->
                <Label 
                 Text="Destino:" FontSize="Large"
                 HorizontalOptions="Center" VerticalOptions="Center"
                 FontAttributes="Bold"/>

            </Border>

            <!--espacio para ingreso por teclado de "destino"-->
            <Entry 
             x:Name="destino" Placeholder="¿Quién recibió este egreso?" FontAttributes="None"
             Margin="10,10,10,0" FontSize="Large" Keyboard="Text"/>

            <!--borde para titulo de "descrpcion del gasto"-->
            <Border BackgroundColor="{StaticResource Terciary}"
             WidthRequest="250" HeightRequest="40"
             StrokeShape="RoundRectangle 5"
             Stroke="{StaticResource Terciary}"
             Margin="10,10,0,0" VerticalOptions="Start"
             HorizontalOptions="Start">

                <!--texto para titulo de "descrpcion del gasto"-->
                <Label 
                 Text="Descripción Del Egreso:" FontSize="Large"
                 HorizontalOptions="Center" VerticalOptions="Center"
                 FontAttributes="Bold"/>

            </Border>

            <!--espacio para ingreso por teclado de "descrpcion del gasto"-->
            <Entry 
             x:Name="descDelGasto" Placeholder="¿En qué se gastó? (opcional)" FontAttributes="None"
             Margin="10,10,10,0" FontSize="Large" Keyboard="Text"/>

            <!--borde para titulo de "monto"-->
            <Border BackgroundColor="{StaticResource Terciary}"
             WidthRequest="90" HeightRequest="40"
             StrokeShape="RoundRectangle 5"
             Stroke="{StaticResource Terciary}"
             Margin="10,10,0,0" VerticalOptions="Start"
             HorizontalOptions="Start">

                <!--texto para titulo de "monto"-->
                <Label 
                 Text="Monto:" FontSize="Large"
                 HorizontalOptions="Center" VerticalOptions="Center"
                 FontAttributes="Bold"/>

            </Border>

            <!--espacio para ingreso por teclado de "monto"-->
            <Entry 
             x:Name="montoEgreso" Placeholder="00,0$" FontAttributes="None"
             Margin="10,10,10,0" FontSize="Large" Keyboard="Numeric"/>

            <!--boton para guardar y validar los datos ingresados-->
            <Button
             Text="Guardar" Clicked="setPropEgreso"
             FontSize="Large" FontAttributes="Bold"
             HorizontalOptions="Center"
             BackgroundColor="{StaticResource Terciary}"
             TextColor="{StaticResource Secondary}"
             BorderColor="{StaticResource Secondary}" BorderWidth="1"/>

            <!--informe del guardado-->
            <Label 
             x:Name="informeEgreso" Text="" 
             VerticalOptions="Center"
             HorizontalOptions="Center"/>

        </StackLayout>

    </ContentPage>

</TabbedPage>